# UNTANGLE Gaming Hub - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===== DATABASE =====
# Development (SQLite)
DATABASE_URL=sqlite:///./untangle.db

# Production (PostgreSQL - if upgrading from SQLite)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# ===== SECURITY =====
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== GOOGLE OAUTH (Optional) =====
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# ===== DODO PAYMENTS (Optional) =====
# Get credentials from: https://dodopayments.com/dashboard
DODO_API_KEY=
DODO_WEBHOOK_SECRET=
DODO_BASE_URL=https://api.dodopayments.com/v1

# ===== CORS =====
# Development
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]

# Production (update with your actual frontend URL)
# ALLOWED_ORIGINS=["https://your-frontend.vercel.app"]

# ===== APPLICATION =====
ENVIRONMENT=development
LOG_LEVEL=INFO
